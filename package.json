{
  "name"        : "MarkMyJourney",
  "version"     : "1.1.3",
  "description" : "My travel blog, MarkMyJourney.com.",
  "keywords"    : [ "blog", "travel" ],
  "homepage"    : "https://www.markmyjourney.com",
  "bugs"        : "https://github.com/vseventer/markmyjourney/issues",
  "license"     : "MIT",
  "author"      : "Mark van Seventer <mark@vseventer.com>",
  "repository"  : { "type": "git", "url": "vseventer/markmyjourney" },
  "config"      : {
    "destination" : "public/",
    "staging"     : "http://localhost:1313"
  },
  "scripts": {
    "glob"    : "find $npm_package_config_destination -iname '*.html' -exec sh -c 'PATH={} && printf \"%s%s\n\" $npm_package_config_staging ${PATH#*/}' \\;",
    "hash"    : "hashmark --cwd $npm_package_config_destination -l 4 '{css,js}/*' '{dir}/{name}.{hash}{ext}' | replaceinfiles -s 'public/**/*.html' --silent",
    "posthash": "rimraf 'public/{css,js}/!(*.*.*)'",
    "hugo"    : "hugo server",
    "imagemin": "imagemin -p mozjpeg --quality 75",
    "leaflet" : "cp node_modules/leaflet/dist/images/*.png static/img/",
    "sass"    : "node-sass -o static/css/ static/css/main.scss",
    "sharp"   : "sharp uploads/* --optimiseScans --overshootDeringing --quality=100 --rotate --trellisQuantisation -v --withoutMetadata",
    "sprity"  : "sprity create static/img/ 'sprites/**/*.png' -c ../img/ -d 1:72 -d 2:192 -s ../css/sprite.css --margin 0 --name icon --split --orientation binary-tree --prefix icon",
    "preuncss": "wait-on -t 60000 $npm_package_config_staging",
    "uncss"   : "uncss -t 500 -u .uncssrc $(npm run glob -s) | cleancss --s0 -do public/css/main.css",
    "postuncss"  : "rimraf public/css/main.scss public/css/sprite.css",
    "prewebpack" : "rimraf node_modules/leaflet-minimap/node_modules/leaflet/",
    "webpack" : "webpack static/js/components.js --display-modules",

    "prebuild"  : "npm run clean && npm run sass",
    "build"     : "hugo",
    "postbuild" : "concurrently 'npm run postbuild:css' 'npm run postbuild:html' 'npm run postbuild:img' 'npm run postbuild:js' && npm run hash",
    "postbuild:css"  : "concurrently -k 'hugo server --watch=false' 'npm run uncss' -s first",
    "postbuild:html" : "html-minifier -c .htmlrc --file-ext html --input-dir $npm_package_config_destination --output-dir $npm_package_config_destination",
    "postbuild:img"  : "npm run imagemin -- public/img/* -o public/img/ -p pngquant --speed 1",
    "postbuild:js"   : "find $npm_package_config_destination -iname '*.js' -exec uglifyjs {} -cmo {} \\;",

    "preuploads"     : "./bin/exif.js $(find uploads/ -iname '*?.*')",
    "uploads"        : "concurrently 'npm run uploads:full' 'npm run uploads:thumbs'",
    "uploads:full"   : "npm run imagemin $(npm run sharp -s -- -w 1280 -h 1280 --max -o static/uploads/) -- -o static/uploads/ --progressive",
    "uploads:thumbs" : "npm run imagemin $(npm run sharp -s -- -w 133  -h  100 -o static/uploads/thumbs/) -- -o static/uploads/thumbs/",

    "clean"       : "rimraf $npm_package_config_destination static/css/main.css",
    "deploy"      : "NODE_ENV=production npm run build",
    "postdeploy"  : "confirm && bin/deploy.js",
    "postinstall" : "concurrently 'npm run leaflet' 'npm run sprity' 'npm run webpack'",
    "prestage"    : "jshint --reporter=node_modules/jshint-stylish static/js/main.js",
    "stage"       : "NODE_ENV=staging npm run build -- -b $npm_package_config_staging",
    "prestart"    : "ls uploads/*?.* 1> /dev/null 2>&1 && npm run uploads",
    "start"       : "NODE_ENV=development npm run watch",
    "watch"       : "concurrently 'npm run hugo -- -v' 'npm run sass -- -w'"
  },
  "dependencies"    : { },
  "devDependencies" : {
    "arc"            : "0.1.x",
    "babel-loader"   : "6.2.x",
    "babel-preset-es2015": "6.16.x",
    "bootstrap"      : "v4.0.0-alpha.4",
    "clean-css"      : "3.4.x",
    "concurrently"   : "3.1.x",
    "confirm"        : "0.1.x",
    "exif-reader"    : "1.0.x",
    "expose-loader"  : "0.7.x",
    "gh-pages"       : "0.11.x",
    "hashmark"       : "4.0.x",
    "html-minifier"  : "3.1.x",
    "imagemin-cli"   : "3.0.x",
    "imagemin-mozjpeg"  : "6.0.x",
    "imagemin-pngquant" : "5.0.x",
    "jquery"         : "3.1.x",
    "jshint"         : "2.9.x",
    "jshint-stylish" : "2.2.x",
    "leaflet"        : "1.0.x",
    "leaflet.markercluster": "1.0.x",
    "leaflet-minimap": "3.4.x",
    "moment"         : "2.15.x",
    "node-sass"      : "3.10.x",
    "rimraf"         : "2.5.x",
    "sharp-cli"      : "0.7.x",
    "@songkick/replaceinfiles": "1.1.x",
    "sprity-cli"     : "1.0.x",
    "uglifyjs"       : "2.4.x",
    "uncss"          : "vseventer/uncss",
    "wait-on"        : "1.5.x",
    "webpack"        : "1.13.x",
    "webpack-append" : "0.1.x"
  },
  "engines": {
    "hugo" : "0.16",
    "node" : "4.x"
  },
  "os"      : [ "darwin" ],
  "private" : true
}