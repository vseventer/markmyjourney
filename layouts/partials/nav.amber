nav.navbar.navbar-full.navbar-light.bg-faded.mmjy-border-bottom
  div.container
    button.navbar-toggler.hidden-sm-up.pull-xs-right[type="button"][data-toggle="collapse"][data-target=".collapse"] â˜°
    a.navbar-brand[href=absURL("/")] #{ Site.Title }
    ul.nav.navbar-nav.navbar-toggleable-xs.collapse
      $current = Permalink
      each $node in Site.Menus.main
        li.nav-item
          .active ? $current == absURL(URL)
          a.nav-link[href=absURL(URL + "/")] #{ Name }
      li.nav-item.dropdown
        a.nav-link.dropdown-toggle[data-toggle="dropdown"][href="#"][role="button"] Destinations
        div.dropdown-menu
          $Site = Site
          $continents = where($Site.Data.continents.features, "properties.slug", "in", $Site.Taxonomies.destinations.Keys)
          each $continent in $continents
            a.dropdown-item[href=absURL("destinations/" + $continent.properties.slug) + "/"] #{ $continent.properties.name }