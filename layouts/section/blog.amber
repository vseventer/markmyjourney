extends ../blog/list.amber

block prepend content
  ol.breadcrumb
    li
      a[href=absURL("/")] Home
    if 1 != Paginator.PageNumber
      li
        a[href=Paginator.First.URL] #{ Title }
      li.active Page #{ Paginator.PageNumber }
    else
      li.active #{ Title }

block append sidebar
  import ../mixins/widgets.amber
    +twitter

block append js
  import ../mixins/widgets.amber
    +jsTwitter